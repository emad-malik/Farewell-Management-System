<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance</title>
</head>
<body>
    <h1>Total Attendance</h1>
    <p>Total Students: <%= studentCount %></p>
    <p>Total Teachers: <%= teacherCount %></p>

    <h2>Students</h2>
    <ul>
        <% students.forEach(student => { %>
            <li><%= student.StudentName %>, Family Members: <%= student.StuFamilyMembers %></li>
        <% }); %>
    </ul>

    <h2>Teachers</h2>
    <ul>
        <% teachers.forEach(teacher => { %>
            <li><%= teacher.TeacherName %>, Family Members: <%= teacher.TeFamilyMembers %></li>
        <% }); %>
    </ul>
</body>
</html>